<h1 align="center">Log in</h1>

<%= form_for(:session, html: {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group row">
    <%= f.label :email, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group row clear-fix">
    <div class="col-sm">
      <%= f.submit("Log in", class: 'btn btn-primary btn-lg float-right') %>
    </div>
  </div>
<% end %>

