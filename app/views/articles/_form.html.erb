<% if @article.errors.any? %>
  <h2>The following errors prevented the article from getting created</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@article, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :description, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", rows: 10, placeholder: "Description of the article", autofocus: true %>
    </div>
  </div>

  <div class="form-group row clear-fix">
    <div class="col-sm">
      <%= f.submit class: 'btn btn-primary btn-lg float-right' %>
    </div>
  </div>

  <div class="row clear-fix">
    <div class="col-sm">
      <%= link_to "Cancel request", articles_path, class: "float-right" %>
    </div>
  </div>
<% end %>

