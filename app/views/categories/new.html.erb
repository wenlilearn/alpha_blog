<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, html: {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-form-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter name", autofocus: true %>
    </div>
  </div>

  <div class="form-group row clear-fix">
    <div class="col-sm">
      <%= f.submit(@category.new_record? ? "Sign up" : "Update", class: 'btn btn-primary btn-lg float-right') %>
    </div>
  </div>
<% end %>

